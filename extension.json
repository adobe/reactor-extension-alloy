{
  "displayName": "AEP Web SDK",
  "name": "adobe-alloy",
  "iconPath": "resources/images/icon.svg",
  "platform": "web",
  "version": "0.0.3",
  "description": "The Adobe Experience Platform Web SDK allows for streaming data into the platform, syncing identities, personalizing content, and more.",
  "author": {
    "name": "Adobe"
  },
  "viewBasePath": "dist/view/",
  "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "instances": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "pattern": "\\D+"
              },
              "configId": {
                "type": "string",
                "minLength": 1
              },
              "orgId": {
                "type": "string",
                "minLength": 1
              },
              "edgeDomain": {
                "type": "string",
                "minLength": 1
              },
              "errorsEnabled": {
                "type": "boolean"
              },
              "optInEnabled": {
                "type": "boolean"
              },
              "idSyncEnabled": {
                "type": "boolean"
              },
              "idSyncContainerId": {
                "oneOf": [
                  {
                    "type": "integer",
                    "minimum": 0
                  },
                  {
                    "type": "string",
                    "pattern": "^%[^%]+%$"
                  }
                ]
              },
              "idMigrationEnabled": {
                "type": "boolean"
              },
              "urlDestinationsEnabled": {
                "type": "boolean"
              },
              "cookieDestinationsEnabled": {
                "type": "boolean"
              },
              "prehidingStyle": {
                "type": "string",
                "minLength": 1
              },
              "context": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["web", "device", "environment", "placeContext"]
                }
              }
            },
            "required": [
              "configId",
              "name"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "instances"
      ],
      "additionalProperties": false
    }
  },
  "actions": [
    {
      "displayName": "Send Event",
      "name": "send-event",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "instanceName": {
            "type": "string",
            "minLength": 1
          },
          "viewStart": {
            "type": "boolean",
            "minLength": 1
          },
          "xdm": {
            "type": "string",
            "pattern": "^%[^%]+%$"
          },
          "type": {
            "type": "string"
          },
          "mergeId": {
            "type": "string"
          }
        },
        "required": [
          "instanceName"
        ],
        "additionalProperties": false
      },
      "libPath": "dist/lib/actions/sendEvent/index.js",
      "viewPath": "actions/sendEvent.html"
    },
    {
      "displayName": "Set Opt-In Preferences",
      "name": "set-opt-in-preferences",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "instanceName": {
            "type": "string",
            "minLength": 1
          },
          "purposes": {
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "all",
                  "none"
                ]
              },
              {
                "type": "string",
                "pattern": "^%[^%]+%$"
              }
            ]
          }
        },
        "required": [
          "instanceName",
          "purposes"
        ],
        "additionalProperties": false
      },
      "libPath": "dist/lib/actions/setOptInPreferences/index.js",
      "viewPath": "actions/setOptInPreferences.html"
    }
  ],
  "dataElements": [
    {
      "displayName": "Event Merge ID",
      "name": "event-merge-id",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "instanceName": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "instanceName"
        ],
        "additionalProperties": false
      },
      "libPath": "dist/lib/dataElements/eventMergeId/index.js",
      "viewPath": "dataElements/instanceNameOnly.html"
    }
  ],
  "main": "dist/lib/instanceManager/index.js"
}
