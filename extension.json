                            "alias"
                          ]
                        },
                        "value": {
                          "type": "string",
                          "oneOf": [
                            {
                              "$ref": "#/definitions/eVarName"
                            },
                            {
                              "$ref": "#/definitions/propName"
                            }
                          ]
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "name",
                        "type",
                        "value"
                      ]
                    }
                  ]
                }
              },
              "props": {
                "type": "array",
                "items": {
                  "type": "object",
                  "oneOf": [
                    {
                      "properties": {
                        "name": {
                          "$ref": "#/definitions/propName"
                        },
                        "type": {
                          "type": "string",
                          "enum": [
                            "value"
                          ]
                        },
                        "value": {
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "name",
                        "type",
                        "value"
                      ]
                    },
                    {
                      "properties": {
                        "name": {
                          "$ref": "#/definitions/propName"
