              },
              "pageName": {
                "type": "string",
                "minLength": 1
              },
              "pageURL": {
                "type": "string",
                "minLength": 1
              },
              "channel": {
                "type": "string",
                "minLength": 1
              },
              "referrer": {
                "type": "string",
                "minLength": 1
              },
              "campaign": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
