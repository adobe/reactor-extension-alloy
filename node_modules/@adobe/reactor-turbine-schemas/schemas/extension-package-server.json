{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://launch.adobe.com/schemas/extension-package-server.json",
  "properties": {
    "name": {
      "$ref": "#/definitions/name"
    },
    "version": {
      "$ref": "#/definitions/semver"
    },
    "displayName": {
      "$ref": "#/definitions/displayName"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "iconPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.svg$"
    },
    "author": {
      "$ref": "#/definitions/author"
    },
    "viewBasePath": {
      "$ref": "#/definitions/basePath"
    },
    "main": {
      "$ref": "#/definitions/libPath"
    },
    "exchangeUrl": {
      "type": "string",
      "minLength": 1,
      "pattern": "^https:\\/\\/(?:(?:experiencecloud|www)\\.)?adobeexchange\\.com"
    },
    "configuration": {
      "$ref": "#/definitions/configuration"
    },
    "platform": {
      "enum": [
        "server"
      ]
    },
    "conditions": {
      "$ref": "#/definitions/features"
    },
    "actions": {
      "$ref": "#/definitions/features"
    },
    "dataElements": {
      "$ref": "#/definitions/features"
    },
    "sharedModules": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/sharedModule"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "version",
    "displayName",
    "description",
    "author",
    "viewBasePath",
    "platform"
  ],
  "definitions": {
    "sharedModule": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "libPath": {
          "$ref": "#/definitions/libPath"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "libPath"
      ]
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "$ref": "#/definitions/url"
        },
        "email": {
          "$ref": "#/definitions/email"
        }
      },
      "required": [
        "name"
      ]
    },
    "fileTransform": {
      "properties": {
        "type": {
          "enum": [
            "file"
          ]
        },
        "propertyPath": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "propertyPath"
      ]
    },
    "functionTransform": {
      "properties": {
        "type": {
          "enum": [
            "function"
          ]
        },
        "propertyPath": {
          "type": "string",
          "minLength": 1
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "propertyPath"
      ]
    },
    "customCodeTransform": {
      "properties": {
        "type": {
          "enum": [
            "customCode"
          ]
        }
      }
    },
    "removeTransform": {
      "properties": {
        "type": {
          "enum": [
            "remove"
          ]
        },
        "propertyPath": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "propertyPath"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature"
      }
    },
    "transforms": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/definitions/functionTransform"
          }
        ]
      }
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?![_\\.])[a-z0-9~_\\-\\.]{1,214}$"
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "basePath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+$"
    },
    "libPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.js$"
    },
    "viewPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.html([?#].*)?$"
    },
    "url": {
      "type": "string",
      "minLength": 1,
      "format": "uri"
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "format": "email"
    },
    "semver": {
      "type": "string",
      "minLength": 1,
      "pattern": "^\\bv?(?:0|[1-9][0-9]*)(?:\\.(?:0|[1-9][0-9]*)){2}(?:-[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?(?:\\+[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?\\b$"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "viewPath": {
          "$ref": "#/definitions/viewPath"
        },
        "schema": {
          "type": "object"
        },
        "transforms": {
          "$ref": "#/definitions/transforms"
        }
      },
      "additionalProperties": false,
      "required": [
        "viewPath",
        "schema"
      ]
    },
    "feature": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "categoryName": {
          "$ref": "#/definitions/displayName"
        },
        "viewPath": {
          "$ref": "#/definitions/viewPath"
        },
        "libPath": {
          "$ref": "#/definitions/libPath"
        },
        "schema": {
          "type": "object"
        },
        "transforms": {
          "$ref": "#/definitions/transforms"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "displayName",
        "libPath",
        "schema"
      ]
    }
  }
}