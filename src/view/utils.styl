// These are utility classes. The !important keyword is very intentional.
// Related reading:
// https://tailwindcss.com/docs/utility-first/
// https://css-tricks.com/when-using-important-is-the-right-choice/


$gap = 8px;

.u-gapTop {
  margin-top: $gap !important;
}

.u-gapTop2x {
  margin-top: $gap*2 !important;
}

.u-gapBottom {
  margin-bottom: $gap !important;
}

.u-gapBottom2x {
  margin-bottom: $gap*2 !important;
}

.u-gapLeft {
  margin-left: $gap !important;
}

.u-gapLeftNegative {
  margin-left: $gap*-1 !important;
}

.u-gapRight {
  margin-right: $gap !important;
}

.u-gapLeft2x {
  margin-left: $gap*2 !important;
}

.u-alignRight {
  text-align: right !important;
}

.u-floatRight {
  float: right !important;
}

.u-flexColumn {
  flex-direction: column !important;
}

.u-fieldLong {
  width: 400px !important;
}

.u-flex {
  display: flex !important;
}

.u-flexShrink0 {
  flex-shrink: 0;
}

.u-alignItemsCenter {
  align-items: center !important;
}

.u-justifyContentCenter {
  justify-content: center;
}

.u-fullHeight {
  height: 100%;
}

.u-overflowXAuto {
  overflow-x: auto;
}

.u-overflowYAuto {
  overflow-y: auto;
}

.u-minHeight0 {
  min-height: 0;
}

.u-widthAuto {
  width: auto;
}
