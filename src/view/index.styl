$rem-size = 16px; // The size of one rem in pixels
$px = 0rem + (1 / $rem-size);

$gap = 8*$px;

body {
  padding: 12*$px;
}

.Label {
  display: inline-block;
  line-height: 36*$px !important;
}

.u-gapLeft {
  margin-left: $gap !important;
}

.u-gapLeft2x {
  margin-left: $gap*2 !important;
}

.u-gapRight {
  margin-right: $gap !important;
}

.u-gapRight2x {
  margin-right: $gap*2 !important;
}

.u-gapTop {
  margin-top: $gap !important;
}

.u-gapTop2x {
  margin-top: $gap*2 !important;
}

.u-gapBottom {
  margin-bottom: $gap !important;
}

.u-gapBottom2x {
  margin-bottom: $gap*2 !important;
}

.u-block {
  display: block !important;
}

.u-inlineBlock {
  display: inline-block !important;
}

.u-italic {
  font-style: italic !important;
}

.u-hidden {
  visibility: hidden !important;
}

.u-noWrap {
  white-space: nowrap;
}

.coral-Heading {
  line-height: 36*$px !important;
}
