.XdmTreeNodeTitle {
  &.is-invalid {
    color: #ec5b62;

    .XdmTreeNodeTitle-type {
      &:before {
        border-left-color: #ec5b62;
      }
      color: inherit;
    }
  }
}

.XdmTreeNodeTitle-displayName {
  white-space: nowrap;
}

.XdmTreeNodeTitle-type {
  &:before {
    content: " ";
    border-left: 1px solid #cacaca;
    padding-left: 8px;
  }
  color: #707070;
}

.ant-tree-treenode-disabled .XdmTreeNodeTitle-type {
  color: inherit;
}
